<?xml version="1.0" encoding="utf-8"?>

<!-- 城市管理 item  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alc_city_manager_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/weatherLayout"
            android:layout_width="94dp"
            android:layout_height="126dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="广州"
                android:textColor="#d8a456"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ebebeb" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stateImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/alc_weather_state_duoyun"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/temText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="20°\n24°"
                    android:textColor="#464646"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/stateText"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="晴转多云"
                android:textColor="#464646"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/choiceButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="设为默认"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addLayout"
            android:layout_width="94dp"
            android:layout_height="125dp"
            android:background="@drawable/alc_city_manager_add_bg"
            android:orientation="horizontal"
            android:visibility="gone" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/alc_city_manager_del"
        android:visibility="visible" />

</RelativeLayout>


